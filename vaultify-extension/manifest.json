{
  "manifest_version": 3,
  "name": "Vaultify Password Manager",
  "version": "1.0",
  "description": "Secure password manager extension for Vaultify.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/vaultify.png",
      "48": "icons/vaultify.png",
      "128": "icons/vaultify.png"
    }
  },
  "icons": {
    "16": "icons/vaultify.png",
    "48": "icons/vaultify.png",
    "128": "icons/vaultify.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://vaultify-password-manager.onrender.com/*"]
}
