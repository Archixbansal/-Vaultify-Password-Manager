{
  "manifest_version": 3,
  "name": "Vaultify - Password Manager",
  "version": "1.0",
  "description": "Secure password manager extension",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://vaultify-password-manager.onrender.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/vaultify.png",
      "32": "icons/vaultify.png",
      "48": "icons/vaultify.png",
      "128": "icons/vaultify.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
